{
  "name": "mirror-display",
  "version": "1.0.0",
  "description": "Mirror Display",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec 'npm run client:build && npm run server:dev' --ext js,json --watch src/server",
    "server:stop": "pkill --signal SIGINT server-mirror-display || true",
    "server:clean": "rm -rf dist/server && rm -rf dist/config",
    "server:build": "npm run server:clean && webpack --progress --colors --config src/server/webpack.config.js",
    "server:start": "node dist/server/server.bundle.js server-mirror-display",
    "server:dev": "npm run server:stop && npm run server:clean && npm run server:build && npm run server:start",
    "client:clean": "rm -rf dist/client",
    "client:statics": "mkdir -p dist/client && cp src/client/client.html dist/client && cp -R src/client/assets dist/client/assets",
    "client:build": "npm run client:clean && npm run client:statics && webpack --progress --colors --config src/client/webpack.config.js",
    "client:dev": "npm run client:clean && npm run client:statics && webpack-dev-server --content-base dist/client --progress --colors --hot --inline --config src/client/webpack.config.js",
    "build": "npm run server:clean && npm run server:build && npm run client:clean && npm run client:build",
    "start": "forever dist/server/server.bundle.js"
  },
  "keywords": [],
  "author": "Alexander Heimbuch (github@heimbu.ch)",
  "license": "MIT",
  "dependencies": {
    "bluebird": "3.5.1",
    "clientconfig": "1.1.1",
    "config": "1.29.2",
		"cheerio": "0.22.0",
    "engine.io": "3.1.4",
    "engine.io-client": "3.1.4",
    "express": "4.16.2",
    "forecast.io-bluebird": "0.0.1",
    "forever": "0.15.3",
    "lodash": "4.17.4",
    "moment": "2.20.1",
    "node-horseman": "^3.1.1",
    "node-schedule": "1.3.0",
    "node-yaml-config": "0.0.4",
    "normalize.css": "7.0.0",
    "phantom": "4.0.12",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-redux": "5.0.6",
    "redux": "3.7.2",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "autoprefixer-loader": "3.2.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.1",
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "css-loader": "0.28.9",
    "file-loader": "1.1.6",
    "html-loader": "0.5.5",
    "json-loader": "0.5.7",
    "node-sass": "4.7.2",
    "nodemon": "1.14.12",
    "npm-watch": "0.3.0",
    "raw-loader": "0.5.1",
    "sass-loader": "6.0.6",
    "style-loader": "0.20.1",
    "url-loader": "0.6.2",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.11.1",
    "webpack-livereload-plugin": "1.0.0"
  }
}
